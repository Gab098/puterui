    <script>
        const DEBUG = true;
        function log(...args) {
            if (DEBUG) console.log('[DEBUG]', ...args);
        }

        let puterReady = false;
        let messages = [];
        let uploadedFiles = [];
        let snippets = [];
        let aiModel = 'claude-3-5-sonnet';

        async function init() {
            log('Inizializzazione...');
            try {
                if (typeof puter === 'undefined') {
                    throw new Error('Puter SDK non caricato');
                }

                log('Puter SDK trovato, tentativo di login...');
                await puter.auth.signIn();
                puterReady = true;
                
                updateStatus('🟢 AI Ready • File Upload • Code Execution', 'success');
                log('Login riuscito!');
                
                await loadHistory();
                await loadSnippets();
                loadSettings();
                showToast('Sistema pronto! ✅');
                
            } catch (error) {
                log('Errore inizializzazione:', error);
                updateStatus('🔴 Errore: ' + error.message, 'error');
                showToast('Errore di connessione!', true);
            }
        }

        function updateStatus(text, type = 'normal') {
            const status = document.getElementById('status');
            status.textContent = text;
            status.style.color = type === 'error' ? 'var(--error-color)' : 
                                 type === 'success' ? 'var(--success-color)' : 
                                 'var(--text-secondary)';
        }

        async function testConnection() {
            log('Test connessione...');
            try {
                if (!puterReady) throw new Error('Puter non inizializzato');
                
                const testData = { test: 'value', timestamp: Date.now() };
                await puter.kv.set('connection_test', JSON.stringify(testData));
                const result = await puter.kv.get('connection_test');
                
                if (result) {
                    showToast('✅ Connessione OK!');
                    updateStatus('🟢 Test superato', 'success');
                } else {
                    throw new Error('Nessun dato ricevuto');
                }
            } catch (error) {
                log('Test fallito:', error);
                showToast('❌ Test fallito: ' + error.message, true);
            }
        }

        async function loadHistory() {
            try {
                const history = await puter.kv.get('chat_history');
                if (history) {
                    messages = JSON.parse(history);
                    log('Cronologia caricata:', messages.length, 'messaggi');
                    renderMessages();
                    updateButtonStates();
                }
            } catch (error) {
                log('Nessuna cronologia trovata');
            }
        }

        async function loadSnippets() {
            try {
                const saved = await puter.kv.get('code_snippets');
                if (saved) {
                    snippets = JSON.parse(saved);
                    document.getElementById('snippetCount').textContent = snippets.length;
                    log('Snippets caricati:', snippets.length);
                    renderSnippets();
                }
            } catch (error) {
                log('Nessuno snippet trovato');
            }
        }

        function loadSettings() {
            const savedModel = localStorage.getItem('ai_model');
            if (savedModel) {
                aiModel = savedModel;
                document.getElementById('aiModelSelect').value = savedModel;
            }
        }

        document.getElementById('aiModelSelect')?.addEventListener('change', (e) => {
            aiModel = e.target.value;
            localStorage.setItem('ai_model', aiModel);
            showToast('Modello cambiato: ' + aiModel);
            log('Modello AI cambiato:', aiModel);
        });

        function handleFileUpload(event) {
            const files = Array.from(event.target.files);
            log('File caricati:', files.length);
            
            const preview = document.getElementById('filePreview');
            
            files.forEach(file => {
                if (file.size > 5 * 1024 * 1024) {
                    showToast(`File ${file.name} troppo grande (max 5MB)`, true);
                    return;
                }

                const reader = new FileReader();
                reader.onload = (e) => {
                    uploadedFiles.push({
                        name: file.name,
                        content: e.target.result,
                        type: file.type,
                        size: file.size
                    });
                    
                    log('File letto:', file.name, file.size, 'bytes');
                    renderFilePreview();
                };
                
                reader.onerror = (error) => {
                    log('Errore lettura file:', error);
                    showToast(`Errore lettura ${file.name}`, true);
                };
                
                reader.readAsText(file);
            });
            
            showToast(`${files.length} file caricati! 📎`);
        }

        function removeFile(name) {
            log('Rimozione file:', name);
            uploadedFiles = uploadedFiles.filter(f => f.name !== name);
            renderFilePreview();
        }

        function renderFilePreview() {
            const preview = document.getElementById('filePreview');
            preview.innerHTML = '';
            uploadedFiles.forEach(f => {
                const fileDiv = document.createElement('div');
                fileDiv.className = 'file-preview';
                fileDiv.innerHTML = `
                    📄 ${f.name} (${(f.size / 1024).toFixed(2)} KB)
                    <button onclick="removeFile('${f.name.replace(/'/g, "\\'")}')" 
                            style="margin-left: auto; background: transparent; border: none; 
                                   color: var(--error-color); cursor: pointer; font-size: 18px;">×</button>
                `;
                preview.appendChild(fileDiv);
            });
        }

        function quickAction(prompt) {
            document.getElementById('userInput').value = prompt;
            sendMessage();
        }

        async function sendMessage() {
            const input = document.getElementById('userInput');
            const sendBtn = document.getElementById('sendBtn');
            const text = input.value.trim();
            
            if (!text) {
                showToast('Scrivi qualcosa!', true);
                return;
            }
            
            if (!puterReady) {
                showToast('Sistema non pronto!', true);
                return;
            }
            
            log('Invio messaggio:', text.substring(0, 50) + '...');
            
            sendBtn.disabled = true;
            input.disabled = true;
            
            let fullContent = text;
            if (uploadedFiles.length > 0) {
                const fileContext = uploadedFiles.map(f => 
                    `File: ${f.name}\n\`\`\`\n${f.content.substring(0, 5000)}\n\`\`\``
                ).join('\n\n');
                fullContent = `${text}\n\n[File caricati]\n${fileContext}`;
            }

            const userMsg = {
                role: 'user',
                content: text,
                files: uploadedFiles.length > 0 ? uploadedFiles.map(f => ({name: f.name, size: f.size})) : null,
                timestamp: new Date().toISOString()
            };
            
            messages.push(userMsg);
            input.value = '';
            uploadedFiles = [];
            document.getElementById('filePreview').innerHTML = '';
            
            renderMessages();
            showLoading();
            updateButtonStates();
            
            try {
                log('Chiamata AI in corso con modello:', aiModel);
                const context = messages.slice(-10).map(m => `${m.role}: ${m.content}`).join('\n\n');
                
                const systemPrompt = `You are an expert coding assistant specialized in programming. You help with:
- Code debugging and optimization
- Explaining programming concepts
- Writing clean, efficient code
- Best practices and design patterns
- Algorithm explanations
- Code reviews

Be concise but thorough. Format code with proper syntax highlighting using markdown code blocks.`;

                const prompt = `${systemPrompt}\n\nConversation history:\n${context}\n\nRespond to the latest message. If code is involved, use proper markdown formatting with language tags.`;
                
                const response = await puter.ai.chat(fullContent, { model: aiModel });
                log('Risposta ricevuta:', response.substring(0, 100) + '...');
                
                const assistantMsg = {
                    role: 'assistant',
                    content: response,
                    timestamp: new Date().toISOString()
                };
                
                messages.push(assistantMsg);
                await puter.kv.set('chat_history', JSON.stringify(messages));
                
                removeLoading();
                renderMessages();
                showToast('Risposta ricevuta! ✅');
                
            } catch (error) {
                log('Errore AI:', error);
                removeLoading();
                showToast('Errore: ' + error.message, true);
                
                messages.push({
                    role: 'assistant',
                    content: `❌ Errore: ${error.message}`,
                    timestamp: new Date().toISOString(),
                    error: true
                });
                renderMessages();
            } finally {
                sendBtn.disabled = false;
                input.disabled = false;
                input.focus();
                updateButtonStates();
            }
        }

        function renderMessages() {
            const container = document.getElementById('messages');
            
            if (messages.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">✨</div>
                        <h2>AI Coding Assistant Avanzato</h2>
                        <p>Carica file, esegui codice, salva snippet e molto altro!</p>
                        
                        <div class="quick-actions">
                            <div class="quick-action-btn" onclick="quickAction('Debug questo codice e trova tutti i problemi')">
                                <div class="quick-action-icon">🐛</div>
                                <h3>Debug Codice</h3>
                                <p style="font-size: 14px; color: var(--text-secondary);">Trova e correggi bug</p>
                            </div>
                            <div class="quick-action-btn" onclick="quickAction('Ottimizza questo codice per migliori performance')">
                                <div class="quick-action-icon">✨</div>
                                <h3>Ottimizza</h3>
                                <p style="font-size: 14px; color: var(--text-secondary);">Migliora le performance</p>
                            </div>
                            <div class="quick-action-btn" onclick="quickAction('Spiega questo concetto di programmazione in dettaglio')">
                                <div class="quick-action-icon">📚</div>
                                <h3>Spiega Concetto</h3>
                                <p style="font-size: 14px; color: var(--text-secondary);">Impara nuove cose</p>
                            </div>
                            <div class="quick-action-btn" onclick="quickAction('Refactoring di questo codice seguendo le best practices')">
                                <div class="quick-action-icon">🔄</div>
                                <h3>Refactoring</h3>
                                <p style="font-size: 14px; color: var(--text-secondary);">Codice più pulito</p>
                            </div>
                        </div>

                        <div style="max-width: 600px; margin: 2rem auto;">
                            <div style="background: var(--bg-secondary); border: 1px solid var(--border-color); border-radius: 12px; padding: 1.5rem;">
                                <h3 style="margin-bottom: 1rem;">✨ Funzionalità Premium:</h3>
                                <ul style="list-style: none; padding: 0; text-align: left; font-size: 14px;">
                                    <li style="margin-bottom: 0.5rem;">📎 Upload e analisi file di codice</li>
                                    <li style="margin-bottom: 0.5rem;">▶️ Esecuzione codice in tempo reale (50+ linguaggi)</li>
                                    <li style="margin-bottom: 0.5rem;">💾 Salvataggio snippet con memoria persistente</li>
                                    <li style="margin-bottom: 0.5rem;">🤖 AI multipla (Claude, GPT models)</li>
                                    <li style="margin-bottom: 0.5rem;">🎨 Code editor integrato</li>
                                    <li style="margin-bottom: 0.5rem;">🔍 Debug e ottimizzazione assistita</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = '';
            
            messages.forEach((msg, idx) => {
                const div = document.createElement('div');
                div.className = `message ${msg.role}`;
                
                let content = escapeHtml(msg.content);
                
                content = content.replace(/```(\w+)?\n([\s\S]*?)```/g, (match, lang, code) => {
                    lang = lang || 'javascript';
                    const codeId = `code-${idx}-${Math.random().toString(36).substr(2, 9)}`;
                    
                    try {
                        const highlighted = Prism.highlight(
                            code.trim(), 
                            Prism.languages[lang] || Prism.languages.javascript, 
                            lang
                        );
                        
                        return `
                            <div class="code-block">
                                <div class="code-header">
                                    <span>${lang}</span>
                                    <div class="code-actions">
                                        <button onclick="openInEditor('${codeId}', '${lang}')">📝 Editor</button>
                                        <button onclick="copyCode('${codeId}')">📋 Copia</button>
                                    </div>
                                </div>
                                <pre class="language-${lang}"><code id="${codeId}" class="language-${lang}">${highlighted}</code></pre>
                            </div>
                        `;
                    } catch (e) {
                        log('Errore highlight:', e);
                        return `<pre><code id="${codeId}">${escapeHtml(code)}</code></pre>`;
                    }
                });
                
                content = content.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
                content = content.replace(/\*(.+?)\*/g, '<em>$1</em>');
                content = content.replace(/`(.+?)`/g, '<code style="background: rgba(0,0,0,0.3); padding: 2px 6px; border-radius: 4px;">$1</code>');
                content = content.replace(/\n/g, '<br>');
                
                div.innerHTML = `
                    <div class="message-content" style="${msg.error ? 'border-color: var(--error-color);' : ''}">
                        <div style="font-size: 12px; opacity: 0.7; margin-bottom: 0.5rem;">
                            ${msg.role === 'user' ? '👤 Tu' : '🤖 Assistant'} • 
                            ${new Date(msg.timestamp).toLocaleTimeString()}
                        </div>
                        ${msg.files ? `<div style="font-size: 12px; margin-bottom: 0.5rem;">${msg.files.map(f => `📎 ${f.name}`).join(', ')}</div>` : ''}
                        <div>${content}</div>
                    </div>
                `;
                
                container.appendChild(div);
            });
            
            container.scrollTop = container.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showLoading() {
            const container = document.getElementById('messages');
            const loading = document.createElement('div');
            loading.className = 'message assistant';
            loading.id = 'loadingMsg';
            loading.innerHTML = `
                <div class="message-content">
                    <div class="loading">
                        <div class="loading-dot"></div>
                        <div class="loading-dot"></div>
                        <div class="loading-dot"></div>
                    </div>
                </div>
            `;
            container.appendChild(loading);
            container.scrollTop = container.scrollHeight;
        }

        function removeLoading() {
            const loading = document.getElementById('loadingMsg');
            if (loading) loading.remove();
        }

        function copyCode(codeId) {
            const codeElement = document.getElementById(codeId);
            if (!codeElement) return;
            
            const code = codeElement.textContent;
            navigator.clipboard.writeText(code).then(() => {
                showToast('Codice copiato! 📋');
            }).catch(err => {
                log('Errore copia:', err);
                showToast('Errore copia!', true);
            });
        }

        function openInEditor(codeId, lang) {
            const codeElement = document.getElementById(codeId);
            if (!codeElement) return;
            
            document.getElementById('codeEditor').value = codeElement.textContent;
            document.getElementById('languageSelect').value = lang;
            switchTab('editor');
            showToast('Aperto nell\'editor! 📝');
        }

        document.getElementById('codeEditor').addEventListener('input', (e) => {
            const lines = e.target.value.split('\n').length;
            document.getElementById('lineCount').textContent = lines;
        });

        async function executeCode() {
            const code = document.getElementById('codeEditor').value;
            const lang = document.getElementById('languageSelect').value;
            const output = document.getElementById('output');
            const execBtn = document.getElementById('execBtn');
            
            if (!code.trim()) return;
            
            execBtn.disabled = true;
            output.textContent = 'Esecuzione in corso...';
            
            try {
                log('Esecuzione codice:', lang);
                const response = await fetch('https://emkc.org/api/v2/piston/execute', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        language: lang,
                        version: '*',
                        files: [{ name: `main.${lang}`, content: code }]
                    })
                });
                
                const data = await response.json();
                output.textContent = data.run?.output || data.run?.stderr || 'Esecuzione completata';
                log('Output ricevuto');
            } catch (error) {
                output.textContent = `Errore: ${error.message}`;
                log('Errore esecuzione:', error);
            } finally {
                execBtn.disabled = false;
            }
        }

        async function saveSnippet() {
            const code = document.getElementById('codeEditor').value;
            const lang = document.getElementById('languageSelect').value;
            
            if (!code.trim()) {
                showToast('Scrivi del codice prima!', true);
                return;
            }
            
            const snippet = {
                id: Date.now(),
                code,
                language: lang,
                timestamp: new Date().toISOString()
            };
            
            snippets.push(snippet);
            await puter.kv.set('code_snippets', JSON.stringify(snippets));
            
            document.getElementById('snippetCount').textContent = snippets.length;
            renderSnippets();
            showToast('Snippet salvato! 💾');
            log('Snippet salvato:', snippet.id);
        }

        function renderSnippets() {
            const grid = document.getElementById('snippetsGrid');
            
            if (snippets.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">📚</div>
                        <h2>Nessuno snippet salvato</h2>
                        <p>Usa l'editor per salvare i tuoi snippet preferiti!</p>
                    </div>
                `;
                return;
            }
            
            grid.innerHTML = '';
            
            snippets.forEach(snippet => {
                const card = document.createElement('div');
                card.className = 'snippet-card';
                card.innerHTML = `
                    <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; align-items: center;">
                        <span style="background: var(--accent-primary); padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 12px;">
                            ${snippet.language}
                        </span>
                        <div style="display: flex; gap: 0.5rem;">
                            <button class="btn" style="padding: 0.25rem 0.5rem;" onclick="loadSnippet(${snippet.id})">📝</button>
                            <button class="btn" style="padding: 0.25rem 0.5rem;" onclick="deleteSnippet(${snippet.id})">🗑️</button>
                        </div>
                    </div>
                    <pre style="background: var(--bg-primary); padding: 1rem; border-radius: 8px; overflow-x: auto; font-size: 12px; max-height: 200px;"><code>${escapeHtml(snippet.code.substring(0, 300))}${snippet.code.length > 300 ? '...' : ''}</code></pre>
                    <div style="font-size: 12px; color: var(--text-secondary); margin-top: 0.5rem;">