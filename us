                        <button class="btn" onclick="document.getElementById('fileInput').click()">üìé</button>
                        <input type="text" id="userInput" class="input-field" placeholder="Chiedi aiuto, carica file, o scrivi codice...">
                        <button class="btn-primary btn" onclick="sendMessage()" id="sendBtn">üöÄ</button>
